<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dy_shape_ffffff_radius_6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/img_msg_dispatch_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/dy_ic_msg_activity" />

        <TextView
            android:id="@+id/tv_msg_dispatch_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/img_msg_dispatch_logo"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="公告" />

        <TextView
            android:id="@+id/tv_msg_dispatch_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:textColor="@color/color_999999"
            android:textSize="12sp"
            tools:text="2021-05-15 18:08:29" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_fa" />

    <TextView
        android:id="@+id/tv_msg_dispatch_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        tools:text="尊敬的用户您好" />

    <TextView
        android:id="@+id/tv_msg_dispatch_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:maxLines="2"
        android:textColor="@color/color_999999"
        android:textSize="12sp"
        tools:text="恭喜您带领着您的团队成为区域销售第一，超额完成您的销售目标,恭喜您带领着您的团队成为区域销售第一,恭喜您带领着您的团队成为区域销售第一,恭喜您带领着您的团队成为区域销售第一,恭喜您带领着您的团队成为区域销售第一" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:background="@color/color_fa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_msg_dispatch_refuse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="16dp"
            android:text="查看申领信息"
            android:textColor="@color/color_999999"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:background="@color/color_fa" />

        <TextView
            android:id="@+id/tv_msg_dispatch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="16dp"
            android:text="复制快递单号"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />


    </LinearLayout>

</LinearLayout>