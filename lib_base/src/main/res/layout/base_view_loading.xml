<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <com.wareroom.lib_base.widget.ProgressView
            android:id="@+id/base_loading_progress"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            app:pwBarColor="#4D037DFF"
            app:pwBarLength="60dp"
            app:pwBarWidth="3dp"
            app:pwRimColor="@color/base_color_page_bg"
            app:pwRimWidth="3dp"
            app:pwSpinSpeed="3dp"
            app:pwTextColor="#4D037DFF"
            app:pwTextSize="10sp" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="数据加载中，请稍后"
            android:textColor="#cdcdcd"
            android:textSize="14sp" />

    </LinearLayout>
</FrameLayout>