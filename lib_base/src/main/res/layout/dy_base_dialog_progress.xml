<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dy_shape_dialog_progress"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <com.wareroom.lib_base.widget.ProgressView
            android:id="@+id/progressBarTwo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            app:pwBarColor="#4D27A4FF"
            app:pwBarLength="60dp"
            app:pwBarWidth="3dp"
            app:pwCircleColor="@color/dy_base_color_white"
            app:pwRimColor="@color/dy_base_color_white"
            app:pwRimWidth="3dp"
            app:pwSpinSpeed="3dp"
            app:pwTextColor="@color/dy_base_color_white"
            app:pwTextSize="10sp" />

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="加载中..."
            android:textColor="#FFFFFF" />
    </LinearLayout>


</LinearLayout>