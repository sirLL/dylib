<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dy_shape_ffffff_radius_top_6"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/confirm_picker_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        android:text="@android:string/cancel"
        android:textColor="#FF333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/confirm_picker_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#FF666666"
        android:textSize="14sp"
        tools:text="@android:string/untitled" />

    <TextView
        android:id="@+id/confirm_picker_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        android:text="@android:string/ok"
        android:textColor="#FF0081FF"
        android:textSize="15sp" />
</LinearLayout>