<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ffffff_radius_6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/img_msg_pk_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_msg_activity" />

        <TextView
            android:id="@+id/tv_msg_pk_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/img_msg_pk_logo"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="公告" />

        <TextView
            android:id="@+id/tv_msg_pk_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:textColor="@color/color_999999"
            android:textSize="12sp"
            tools:text="2021-05-15 18:08:29" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_fa" />

    <TextView
        android:id="@+id/tv_msg_pk_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:textColor="@color/color_999999"
        android:textSize="14sp"
        tools:text="大王战队邀请你进行战队PK" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:background="@color/color_fa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_msg_pk_refuse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="16dp"
            android:text="拒绝 PK"
            android:textColor="@color/color_999999"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:background="@color/color_fa" />

        <TextView
            android:id="@+id/tv_msg_pk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="16dp"
            android:text="接受 PK"
            android:textColor="@color/color_037dff"
            android:textSize="14sp" />


    </LinearLayout>

</LinearLayout>