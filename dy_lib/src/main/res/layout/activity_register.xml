<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".mvp.login.view.RegisterActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="注册"
        android:textColor="@color/color_333333"
        android:textSize="26sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50" />

    <EditText
        android:id="@+id/ed_phone"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape_fbfafb_radius_6"
        android:gravity="center_vertical"
        android:hint="输入您的手机号"
        android:inputType="phone"
        android:maxLines="1"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_d8d8d8"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape_fbfafb_radius_6"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_sms_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:digits="@string/edit_input_0zZ"
            android:hint="输入您的验证码"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_d8d8d8"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:enabled="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="发送验证码"
            android:textColor="@color/color_enable_d8d8d8_1b68eb" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape_fbfafb_radius_6"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:digits="@string/edit_input_password"
            android:hint="输入您的登录密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_d8d8d8"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_pay_eye"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_eye_pwd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape_fbfafb_radius_6"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_pay_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:digits="@string/edit_input_password"
            android:hint="输入您的支付密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_d8d8d8"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_eye"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_eye_pwd" />
    </LinearLayout>

    <EditText
        android:id="@+id/ed_invite_code"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape_fbfafb_radius_6"
        android:gravity="center_vertical"
        android:hint="邀请码（必填）"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_d8d8d8"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="112" />

    <Button
        android:id="@+id/btn_submit"
        style="@style/SubmitButton"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="注册" />

    <TextView
        android:id="@+id/tv_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_horizontal"
        android:text="点击注册，即表示您同意《电银伙伴用户协议》"
        android:textColor="@color/color_999999"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="86" />
</LinearLayout>