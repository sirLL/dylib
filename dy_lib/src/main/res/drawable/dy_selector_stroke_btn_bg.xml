<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/color_27a4ff"
                ></stroke>

            <corners
                android:radius="6dp"
                ></corners>

            <solid
                android:color="@color/color_d8d8d8"
                ></solid>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/color_27a4ff"
                ></stroke>

            <corners
                android:radius="6dp"
                ></corners>

            <solid
                android:color="@color/white"
                ></solid>
        </shape>
    </item>

    <item >
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/color_27a4ff"
                ></stroke>

            <corners
                android:radius="6dp"
                ></corners>

            <solid
                android:color="@color/white"
                ></solid>
        </shape>
    </item>

</selector>